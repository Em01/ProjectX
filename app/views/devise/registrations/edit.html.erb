<div class="container">
	<h2 class="primary-dark-color"><strong>Edit Profile</strong></h2>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :multipart => true, method: :put }) do |f| %>
		<%= devise_error_messages! %>

		<div class='form-group'>
			<%= f.label :first_name, class: 'primary-color' %><br />
			<%= f.text_field :first_name, autocomplete: "off", required:"true", class: 'form-control' %>
		</div>

		<div class='form-group'>
			<%= f.label :last_name, class: 'primary-color' %><br />
			<%= f.text_field :last_name, autocomplete: "off", required:"true", class: 'form-control' %>
		</div>

		<div class='form-group'>
			<%= f.label :email, class: 'primary-color' %><br />
			<%= f.email_field :email, autofocus: true, class: 'form-control' %>
		</div>

		<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
			Currently waiting confirmation for: <%= resource.unconfirmed_email %>
		<% end %>

		<div class='form-group'>
			<%= f.label :password, class: 'primary-color' %> <i>(leave blank if you don't want to change it)</i><br />
			<%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
		</div>

		<div class='form-group'>
			<%= f.label :password_confirmation, class: 'primary-color' %><br />
			<%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
		</div>

		<div class='form-group'>
			<%= f.label :current_password, class: 'primary-color' %> <i>(we need your current password to confirm your changes)</i><br />
			<%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
		</div>

		<div class= 'profile-picture'><%= f.label :avatar, 'Profile picture', class: 'primary-color' %><br />  
		<%= f.file_field :avatar, class: 'form-control' %></div>

		<div><%= f.submit "Update", class: 'btn btn-primary' %></div>
	<% end %>

	<h3>Cancel my account</h3>

	<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-primary' %></p>

	<%= link_to "Back", :back %>
</div>