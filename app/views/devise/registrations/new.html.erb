<div class="container">
	<div class="col-xs-12 col-sm-6">
		<h2 class="primary-dark-color"><strong>Sign up</strong></h2>

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>

			<div class="form-group">
				<%= f.label :first_name, class: 'primary-color' %><br />
				<%= f.text_field :first_name, autocomplete: "off", required:"true", class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :last_name, class: 'primary-color' %><br />
				<%= f.text_field :last_name, autocomplete: "off", required:"true", class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :email, class: 'primary-color' %><br />
				<%= f.email_field :email, autofocus: true, required:"true", class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :password, class: 'primary-color' %><br />
				<%= f.password_field :password, autocomplete: "off", required:"true", class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.label :password_confirmation, class: 'primary-color' %><br />
				<%= f.password_field :password_confirmation, autocomplete: "off", required:"true", class: 'form-control' %>
			</div>

			<div class="form-group">
				<%= f.submit "Sign up", class: 'btn btn-primary' %></div>
			</div>
		<% end %>
		
		<div class="clearfix"></div>

		<%= render "devise/shared/links" %>
	</div>
</div>