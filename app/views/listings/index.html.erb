<div class="listings container">
	<% if @all_listings.any? %>
		<% listingCount=0; @all_listings.shuffle.each do |listing| listingCount+=1 %>
			<% unless listing.sold %>
				<div class="listing col-xs-6	 col-sm-4">
					<%= link_to listing_path(listing) do %>
						<%= image_tag listing.image_containers.first.picture(:medium), class: 'img-responsive' %>
					<% end %>
					
				</div>
				
			<% end %>
		<% end %>
	<% else %>
		There are no items yet
	<% end %>
	<div class="clearfix"></div>
	<div id="loading-more" class="primary-light-color text-center"><h3><strong>Loading more...<strong></h3></div>
</div>
