<% if @listing.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this post from being saved:</h2>
<% end %>

<%= form_for @listing, html: { multipart: true } do |f| %>
  
  <%= f.fields_for :image_containers do |builder| %>
    <fieldset>
      <%= builder.label :name %><br />
      <%= builder.text_field :name %><br />
      <%= builder.hidden_field :_destroy %>
      <%= link_to "remove", '#', class: "remove_fields" %>
    </fieldset>
    <% end %>
	
  <%= f.label :description %>
	<%= f.text_field :description %>

	<%= f.label :price %>
	<%= f.text_field :price %>

	<%= f.label :location %>
	<%= f.text_field :location %>

	<%= f.label :hashtag_names, "Hashtags" %>	
	<%= f.text_field :hashtag_names %>

	<% if @listing.new_record? %>
  <%= f.submit "Add my stuff" %>
  <% else %>
  <%= f.submit "Save" %>
	<% end %>

<% end %>