<div id="conversations" class="container">
	<h2 class="primary-dark-color"><strong>Selling</strong></h2>
	<div class="col-xs-9">
		<ul class="list-unstyled">
			<% @sales_listings_chatrooms.each do |chatroom| %>
				<li>
					<div class="col-xs-11">
						<%= link_to listing_chatroom_path(chatroom.listing) do %>
							<div class="chat-img col-xs-2">
								<%= image_tag chatroom.listing.main_pic, width: '100', id: 'listing-main-pic' %>
							</div>
							<div class="col-xs-7">
								<div class="chat-name">
									<% if current_user == chatroom.listing.seller %>
										<%= chatroom.listing.buyers.first.first_name %>
									<% else %>
										<%= chatroom.listing.seller.first_name %>
									<% end %>
								</div>
								<div class="last-msg">
									<% if chatroom.comments.any? %>
										<% if chatroom.comments.any? && current_user == chatroom.comments.last.user %>
											<%= 'You:' %>
										<% else %>
											<%= chatroom.comments.last.user.first_name %>
										<% end %>
										<%= chatroom.comments.last.body %>
									<% else %>
										No comments yet
									<% end %>
								</div>
							</div>
						<% end %>
					</div>
					<div class="remove-btn col-xs-1">
						<a href="#"><i class="glyphicon glyphicon-remove"></i></a>
					</div>
					<div class="clearfix"></div>
				</li>
			<% end %>
		</ul>
	</div>

	<div class="clearfix"></div>

	<h2 class="primary-dark-color"><strong>Buying</strong></h2>
	<div class="col-xs-9">
		<ul class="list-unstyled">
			<% @want_listings_chatrooms.each do |chatroom| %>
				<li>
					<div class="col-xs-11">
						<a href="#">
							<div class="chat-img col-xs-2">
								<%= image_tag chatroom.listing.main_pic, width: '100', id: 'listing-main-pic' %>
							</div>
							<div class="col-xs-7">
								<div class="chat-name">
									<% if current_user == chatroom.listing.seller %>
										<%= chatroom.listing.buyers.first.first_name %>
									<% else %>
										<%= chatroom.listing.seller.first_name %>
									<% end %>
								</div>
								<% if chatroom.comments.any? %>
									<div class="last-msg">
										<% if chatroom.comments.any? && current_user == chatroom.comments.last.user %>
											<%= 'You:' %>
										<% else %>
											<%= chatroom.comments.last.user.first_name %>
										<% end %>
										<%= chatroom.comments.last.body %>
									</div>
								<% end %>
							</div>
						</a>
					</div>
					<div class="remove-btn col-xs-1">
						<a href="#"><i class="glyphicon glyphicon-remove"></i></a>
					</div>
					<div class="clearfix"></div>
				</li>
			<% end %>
		</ul>
	</div>

</div>



<% @want_listings.each do |want_listing| %>
	<% if want_listing.chatroom.comments.empty? %>
		<%= image_tag want_listing.main_pic, width: '100px', id: 'listing-main-pic' %>
		<i><%= link_to "Chat to the seller!" , listing_chatroom_path(want_listing) %></i><br>
	<% end %>

	<% if want_listing.last_comment %>
		<%= image_tag want_listing.main_pic, width: '100px', id: 'listing-main-pic' %>
		<% if current_user == want_listing.last_comment.user %>
			<i><%= time_ago_in_words want_listing.last_comment.created_at %> ago you said: 
				<%= link_to want_listing.last_comment.body, listing_chatroom_path(want_listing) %></i><br>
		<% else %>
			<i><%= time_ago_in_words want_listing.last_comment.created_at %> ago 
			<%= want_listing.last_comment.user.first_name %> said:
			<%= link_to want_listing.last_comment.body, listing_chatroom_path(want_listing) %></i><br>
		<%end%>
	<% end %>
<%end%>


<h2>Selling:</h2>
<% if @sales_listings_chatrooms.empty? %>
	<%= link_to "Sell some stuff", new_listing_path %>
<% else %>
	<% @sales_listings_chatrooms.each do |chatroom| %>	

		<% if chatroom %>

			<% if chatroom.any? %>
				<%= image_tag chatroom.listing.main_pic, width: '100px', id: 'listing-main-pic' %>
				<i><%= link_to "Chat to the buyer!" , listing_chatroom_path(chatroom.listing) %></i><br>
			<% end %>
		
			<% if chatroom.comments.last %>
				<%= image_tag chatroom.listing.main_pic, width: '100px', id: 'listing-main-pic' %>
				<% if current_user == chatroom.comments.last.user %>
					<i>
					<%= time_ago_in_words chatroom.comments.last.created_at %> ago you said:
					<%= link_to chatroom.comments.last.body, listing_chatroom_path(chatroom.listing) %>
				</i><br>
				<% else %>
				<i>
					<%= time_ago_in_words chatroom.comments.last.created_at %> ago 
					<%= chatroom.comments.last.user.first_name %> said:
					<%= link_to chatroom.comments.last.body, listing_chatroom_path(chatroom.listing) %>
				</i><br>
				<% end %>

			<% end %>
		<% end %>
		
	<% end %>
<% end %>
